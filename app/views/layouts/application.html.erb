<!DOCTYPE html>
<html>
  <head>
    <title>Location</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDV9e6yk84jLPVviXJfTlM1034Z3wF3YD8&callback=initMap"
                                         async defer></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse bg-inverse">
      <%= link_to 'Location', root_path, class: 'navbar-brand' %>

      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to 'Places', places_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Add Place', new_place_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Measure distance between places', new_distance_path, class: 'nav-link' %>
        </li>
      </ul>
    </nav>

    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg.html_safe, class: "alert alert-#{name}") %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>

